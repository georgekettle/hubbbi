<div class="w-screen h-screen flex items-center justify-center flex-col overflow-scroll pb-16">
  <div class="p-3 mb-2 flex items-center flex-col">
    <h2 class="font-bold text-3xl mb-3 text-center">Forgot your password?</h2>
    <p class="text-gray-400 text-sm text-center">or back to <%= link_to "Log in", new_session_path(resource_name), class: 'text-primary px-2 p-1 rounded-md bg-primary-50' %></p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="w-screen sm:w-96">
      <div class="px-4 py-5">
        <%= f.error_notification %>

        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: example_email,
                    input_html: { autocomplete: "email" } %>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: 'w-full' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
