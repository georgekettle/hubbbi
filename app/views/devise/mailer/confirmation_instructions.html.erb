<% content_for :preheader do %>
  You can confirm your account email (<%= @email %>) through the link below
<% end %>

<h1>Welcome!</h1>
<p>You can confirm your account email (<%= @email %>) through the link below:</p>

<table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
  <tbody>
    <tr>
      <td align="left">
        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td><%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token) %></td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
