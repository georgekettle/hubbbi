<div class="fixed w-screen bottom-16 md:bottom-4 left-0 -mb-0.5" style="z-index: 999">
  <!-- media player -->
  <div data-media-target="floatingMediaPlayer" class="animated fadeIn p-1 w-full max-w-lg mx-auto">
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden relative p-1 flex items-center">
      <div class="animate-pulse mr-3 w-12 h-12 rounded bg-gray-200 flex-shrink-0 flex items-center justify-center"></div>
      <div class="flex-grow">
        <div class="animate-pulse h-4 w-1/2 rounded bg-gray-200 mb-2"></div>
        <div class="animate-pulse h-1 w-1/3 rounded-full bg-gray-200"></div>
      </div>

      <div class="group flex-shrink-0 absolute right-1 top-1/2 transform -translate-y-1/2 rounded-full mr-2">
        <div data-media-target='play' class="group-hover:scale-105 scale-100 h-8 w-8 rounded-full flex items-center justify-center flex-shrink-0 cursor-pointer">
          <%= render 'icons/play_fill', classes: "fill-current text-gray-200 animate-pulse" %>
        </div>
      </div>
    </div>
  </div>
</div>
