<%= simple_form_for [section, audio] do |f| %>
  <%= f.file_field :file,
          direct_upload: true,
          required: true,
          accept:"audio/*",
          data: { controller: 'uploader', uploader_filetypes_value: ['audio/*'] } %>

  <%= f.input :title %>
  <div class="form-actions">
    <%= f.submit class: "w-full" %>
  </div>
<% end %>
