<%= simple_form_for [section, video], data: { controller: 'segmented-control' } do |f| %>
  <div class="mb-4 max-w-lg">
    <div class="ios-segmented-control" data-segmented-control-target="container">
      <span class="selection" data-segmented-control-target="selection"></span>
      <div class="option">
        <input type="radio" id="video-upload" name="video[is_upload]" value="true" checked>
        <label for="video-upload"><span>File upload</span></label>
      </div>
      <div class="option">
        <input type="radio" id="url" name="video[is_upload]" value="false">
        <label for="url"><span>Url upload</span></label>
      </div>
    </div>
  </div>

  <div id="video-upload-toggle-content" class="segmented-option-content">
    <%= f.file_field :file,
            direct_upload: true,
            required: true,
            accept:"video/quicktime, video/mp4",
            data: { controller: 'uploader', uploader_filetypes_value: ['video/quicktime', 'video/mp4'] } %>
  </div>

  <div id="url-toggle-content" class="segmented-option-content">
    <%= f.input :url, label: false, placeholder: "https://www.youtube.com/watch?v=iaWiYtqL-4Y", hint: "Place youtube or vimeo links here" %>
  </div>

  <%= f.input :title %>
  <div class="form-actions">
    <%= f.submit class: "w-full" %>
  </div>
<% end %>
