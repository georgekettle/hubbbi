<%= simple_form_for [section, video] do |f| %>
  <%= f.label :file, label: 'Video' %>
  <%= f.file_field :file,
          direct_upload: true,
          required: true,
          accept:"video/quicktime, video/mp4",
          data: { controller: 'uploader', uploader_filetypes_value: ['video/quicktime', 'video/mp4'] } %>
  <%= f.input :url, label: "Link", placeholder: "https://www.youtube.com/watch?v=iaWiYtqL-4Y", hint: "Place youtube or vimeo links here" %>
  <%= f.input :title %>
  <div class="form-actions">
    <%= f.submit class: "w-full" %>
  </div>
<% end %>
