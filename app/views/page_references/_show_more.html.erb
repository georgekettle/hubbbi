<div id="filter-item" data-filters="[]" data-action="click->filter#toggleExtras" data-filter-target="showMoreContainer" class="page-reference show-more">
  <div class="md:aspect-h-9 md:aspect-w-16">
    <div class="show-more-card">
      <div class="show-more-card-info">
        <div>
          <h4 class="show-more-text">Show more</h4>
          <h4 class="show-less-text">Show less</h4>
          <p class="text-gray-400 text-xs"><%= hidden_count %> other pages</p>
        </div>
        <div class="show-more-button">
          <%= render "icons/chevron_right", classes: 'stroke-current text-white transform rotate-90' %>
        </div>
      </div>
    </div>
  </div>
</div>
