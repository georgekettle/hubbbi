
<%= render "components/headers/header", header: "#{t "devise.invitations.edit.header"}", subheader: resource.email, hide_back_link: true %>

<%= render 'shared/container', classes: 'p-4' do %>
  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :invitation_token %>

    <div class="form-inputs">
      <%= f.input :full_name, placeholder: "Barack Obama" %>
      <%= f.input :password, placeholder: "********" %>
      <%= f.input :password_confirmation, placeholder: "********" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.edit.submit_button") %>
    </div>
  <% end %>
<% end %>
