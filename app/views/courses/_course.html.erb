<%= link_to course, class: "mb-2 block" do %>
  <% if course.cover.attached? %>
    <%= render "components/card", title: course.title, subtitle: "#{course.course_members.count} members", image: course.cover %>
  <% else %>
    <%= render "components/card", title: course.title, subtitle: "#{course.course_members.count} members", no_shadow: true %>
  <% end %>
<% end %>
