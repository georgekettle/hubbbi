<div class="hidden md:flex bg-primary-600 justify-between items-center p-5 px-4 sm:px-6">
  <%= link_to root_path, class: "flex items-center" do %>
    <%= image_tag asset_url('logo.svg'), class: 'w-6 mr-2' %>
    <h4 class="tracking-tight text-white font-semibold hidden sm:block">Akademy project</h4>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-white text-sm bg-black bg-opacity-20 hover:bg-opacity-30 p-2 rounded-md px-4 font-medium" %>
  <% else %>
    <div>
      <%= link_to "Login", new_user_session_path, class: "text-white text-sm bg-black bg-opacity-20 hover:bg-opacity-30 p-2 rounded-md px-4 font-medium" %>
      <%= link_to "Signup", new_user_registration_path, class: "text-primary-700 text-sm bg-white p-2 rounded-md px-4 font-medium ml-2" %>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="md:hidden fixed w-screen bg-white z-10 border-t bottom-0 left-0 flex items-center justify-center p-2 pb-3">
    <% home_link = selected_group ? group_path(selected_group) : groups_path %>
    <%= link_to home_link, class: "mx-2 h-10 w-10 stroke-current text-gray-400 hover:text-gray-900 flex items-center justify-center rounded-full" do %>
      <%= render "icons/home", classes: "h-7 w-7" %>
    <% end %>
    <% content_link = selected_group ? contents_path : groups_path %>
    <%= link_to content_link, class: "mx-2 h-10 w-10 stroke-current text-gray-400 hover:text-gray-900 flex items-center justify-center rounded-full" do %>
      <%= render "icons/library", classes: "h-7 w-7" %>
    <% end %>
    <% profile_link = selected_group ? group_member_path(selected_group_member) : groups_path %>
    <%= link_to profile_link, class: "mx-2 h-10 w-10 stroke-current text-gray-400 hover:text-gray-900 flex items-center justify-center rounded-full" do %>
      <%= render "icons/profile", classes: "h-7 w-7" %>
    <% end %>
  </div>
<% end %>

