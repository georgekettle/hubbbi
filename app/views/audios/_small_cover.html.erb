<div class="w-12 h-12 rounded bg-gray-200 flex-shrink-0 flex items-center justify-center overflow-hidden">
  <% if audio.cover.attached? %>
    <%= cl_image_tag(audio.cover.key, :width => 200, :height => 200, :crop => :fill) %>
  <% else %>
    <%= render 'icons/audio', classes: 'stroke-current text-gray-800 h-4 w-4' %>
  <% end %>
</div>
