<%= link_to group, class: "mb-2 block" do %>
  <% if group.cover.attached? %>
    <%= render "components/card", title: group.name, subtitle: pluralize(group.group_members.count, "member"), image: cl_image_path(group.cover.key) %>
  <% else %>
    <%= render "components/card", title: group.name, subtitle: pluralize(group.group_members.count, "member"), no_shadow: true %>
  <% end %>
<% end %>
