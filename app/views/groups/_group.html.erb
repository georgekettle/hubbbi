<%= link_to group, class: "mb-2" do %>
  <% if group.cover.attached? %>
    <%= render "components/card", title: group.name, subtitle: "#{group.group_members.count} members", image: group.cover %>
  <% else %>
    <%= render "components/card", title: group.name, subtitle: "#{group.group_members.count} members", no_shadow: true %>
  <% end %>
<% end %>
