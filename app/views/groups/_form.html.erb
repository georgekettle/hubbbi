<%= simple_form_for @group do |f| %>
  <%= f.label :cover, label: 'Cover image' %>
  <% if @group.cover.present? %>
    <div class="p-4 h-56 sm:h-72 z-0 bg-white border border-gray-200 rounded-md mb-4 flex justify-center items-center">
      <div style="background: url('<%= @group.cover.url %>');" class="bg-contain bg-no-repeat bg-center w-full h-full rounded-md overflow-hidden bg-gray-900">
        <div class="h-1/4 w-full relative">
          <%= link_to attachment_path(@group.cover.id, redirect_path: request.path),
                      method: :delete,
                      class: "absolute right-2 top-2 cursor-pointer flex justify-center items-center bg-white rounded-full h-6 w-6 shadow border border-gray-100 hover:bg-red-100 hover:border-red-100 text-red-500 hover:text-red-600",
                      data: { confirm: 'Are you sure you want to delete this image?' } do %>
            <%= render 'icons/close', classes: "h-2.5 w-2.5 stroke-current" %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <%= f.file_field :cover,
            direct_upload: true,
            required: true,
            accept:"image/png, image/jpeg, image/gif",
            data: { controller: 'uploader' } %>
  <% end %>
  <%= f.input :name, required: true, autofocus: true %>
  <div class="form-actions">
    <%= f.submit class: 'w-full' %>
  </div>
<% end %>
