<%= simple_form_for @group do |f| %>
  <%= f.label :cover, label: 'Cover image' %>
  <%= render 'components/forms/image_upload', attachment: @group.cover do %>
    <%= f.file_field :cover,
            direct_upload: true,
            required: true,
            accept:"image/png, image/jpeg, image/gif",
            data: { controller: 'uploader', uploader_aspect_value: 1 } %>
  <% end %>
  <%= f.input :name, required: true %>
  <div class="form-actions">
    <%= f.submit class: 'w-full' %>
  </div>
<% end %>
