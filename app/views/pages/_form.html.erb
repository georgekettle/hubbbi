<%= simple_form_for(page) do |f| %>
  <%= f.label :covers, label: 'Cover images', required: true %>
  <%= f.file_field :cover,
          direct_upload: true,
          required: true,
          accept:"image/png, image/jpeg, image/gif",
          data: { controller: 'uploader' } %>
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :tag_list, label: 'Tags', input_html: { value:  page.tags.map{|tag| tag.name}.join(','), data: { controller: "multi-select" } } %>
  <div class="form-actions">
    <%= f.submit class: "w-full" %>
  </div>
<% end %>
