<%= link_to page_path(page), class: "group w-full relative hover:bg-black hover:bg-opacity-5 rounded-lg inline-block" do %>
  <div class="w-full flex items-center justify-between p-1">
		<div class="flex items-center">
		  <% image_path = page.cover.attached? ? cl_image_path(page.cover.key, height: 200, width: 200, crop: :fill) : '' %>
		  <div class="rounded h-12 w-12 overflow-hidden bg-center bg-cover bg-gray-200 border border-white text-gray-800 flex items-center justify-center" style="background-image: url(<%= image_path %>)">
		  	<%= render('icons/library', classes: 'stroke-current h-4 w-4') unless page.cover.attached? %>
		  </div>
		  <div class="ml-2">
		    <h4 class="line-clamp-1"><%= page.title %></h4>
		    <% if page.subtitle %>
		      <p class="text-xs text-gray-400 line-clamp-1"><%= page.subtitle %></p>
		    <% end %>
		  </div>
		</div>
		<div class="h-8 w-8 hover:shadow rounded-full flex items-center justify-center flex-shrink-0 mr-1 transform transition-transform duration-300 ease-in-out hover:scale-110 group-hover:scale-110 group-hover:bg-white cursor-pointer">
      <%= render "icons/arrow_right" %>
    </div>
  </div>
<% end %>