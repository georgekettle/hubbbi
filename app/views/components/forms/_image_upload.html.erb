<% if attachment.present? && attachment.id %>
  <div class="p-4 h-56 sm:h-72 z-0 bg-white border border-gray-200 rounded-md mb-4 flex justify-center items-center">
    <div style="background: url('<%= attachment.url %>');" class="bg-contain bg-no-repeat bg-center w-full h-full rounded-md overflow-hidden bg-gray-900">
      <div class="h-1/4 w-full relative">
        <%= link_to attachment_path(attachment.id, redirect_path: request.path),
                    method: :delete,
                    class: "absolute right-2 top-2 cursor-pointer flex justify-center items-center bg-white rounded-full h-6 w-6 shadow border border-gray-100 hover:bg-red-100 hover:border-red-100 text-red-500 hover:text-red-600",
                    data: { confirm: 'Are you sure you want to delete this file?' } do %>
          <%= render 'icons/bin', classes: "h-3.5 w-3.5 stroke-current" %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <%= yield %>
<% end %>
