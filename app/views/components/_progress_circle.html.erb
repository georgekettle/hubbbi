<% classes ||= '' %>
<% remaining_progress = 100 - progress %>
<% stroke ||= 8 %>

<svg id="svg" class="fill-current stroke-current <%= classes %>" viewbox="0 0 100 100">
  <circle cx="50" cy="50" r="45" fill="none" stroke="none"/>
  <path fill="none" stroke-linecap="round" stroke-width="<%= stroke %>"
        stroke-dasharray="<%= progress.fdiv(100) * 251.2 %>,<%= remaining_progress.fdiv(100) * 251.2 %>"
        d="M50 10
           a 40 40 0 0 1 0 80
           a 40 40 0 0 1 0 -80"/>
</svg>