<% group_member ||= nil %>
<% size ||= 12 %>
<% classes ||= "" %>

<div class="w-<%= size %> h-<%= size %> relative inline-block overflow-hidden <%= classes %>">
  <div class="w-full h-full rounded-full border border-white overflow-hidden text-center bg-contrast-light flex justify-center items-center">
    <% if group_member && group_member.avatar.attached? %>
      <%= cl_image_tag(group_member.avatar.key, :width => 200, :height => 200, :crop => :fill) %>
    <% else %>
      <%= image_tag "avatar.svg", :width => 200, :height => 200 %>
    <% end %>
  </div>
</div>
