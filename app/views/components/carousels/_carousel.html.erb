<% header ||= "" %>

<div data-controller="carousel" class="single-carousel relative">
  <div class="opacity-0 outline-none" data-carousel-target="container">
    <%= yield %>
  </div>
  <div class="absolute right-4 top-4">
    <div data-carousel-target="buttons" class="flex items-center rounded-md p-0.5 backdrop-filter backdrop-blur bg-black bg-opacity-20"></div>
  </div>
  <!-- Loading display -->
  <div data-carousel-target="loader" class="p-2 absolute left-0 top-0 w-full h-full">
    <div class="w-full rounded-md flex flex-col items-center justify-center py-12">
      <div class="mb-2">
        <%= render 'components/loaders/thinking' %>
      </div>
      <p class="text-black opacity-20 text-center text-xs">Loading images</p>
    </div>
  </div>
</div>
