<% title ||= nil %>
<% subtitle ||= nil %>
<% no_padding ||= false %>

<div class="hidden" data-lightbox-target="content">
  <div data-lightbox-target="close" class="animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
    <!-- Modal Inner Container -->
    <div class="max-h-screen w-full max-w-xl relative">
      <!-- Modal Card -->
      <div class="m-1 bg-contrast-50 rounded-lg shadow overflow-hidden">
        <div class="w-full bg-white px-4 sm:px-8 py-4 flex items-center justify-between border-b border-gray-200">
          <div>
            <h4 class="text-lg"><%= title %></h4>
            <% if subtitle %>
              <p class="text-xs text-gray-400"><%= subtitle %></p>
            <% end %>
          </div>
          <%= link_to "#", class: "icon-btn faded", data: { lightbox_target: 'close' } do %>
            <%= render 'icons/close', classes: 'h-3.5 w-3.5' %>
          <% end %>
        </div>
        <% if no_padding %>
          <div class="relative">
        <% else %>
          <div class="p-4 sm:p-8 relative">
        <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </div>


</div>
