<% options = [
      {title: "Youtube or Vimeo", id: 'url', checked: video.url.present? || video.new_record?},
      {title: "Upload your own", id: 'video-upload', checked: video.url.present?},
  ] %>

<div class="ios-segmented-control" data-segmented-control-target="container">
  <span class="selection" data-segmented-control-target="selection"></span>
  <% options.each do |option| %>
    <div class="option">
      <input type="radio" id="<%= option[:id] %>" name="video[is_upload]" value="true" <%= 'checked' if option[:checked] %>>
      <label for="<%= option[:id] %>"><span><%= option[:title] %></span></label>
    </div>
  <% end %>
</div>
